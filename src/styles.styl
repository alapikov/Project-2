$textColor = #1b1b1b
$lightGrey1 = hsl(0 0% 62%)

transSmooth1($property, $duration)
    transition-property: $property
    transition-duration: $duration
    transition-delay: 0s
    transition-timing-function: cubic-bezier(0.28, 0.03, 0.13, 0.94)

body
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start
    margin: 0 auto
    color: $textColor
    background-color: hsl(207 40% 87%)
    cursor: default

#Container
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-start

// --below-- all styles for Header component

.headerCont
    position: fixed
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    margin-bottom: 20px
    width: 100vw
    height: 52px
    box-shadow: 0px 0px 24px -5px #000
    background-color: #fff

.headerInnerCont
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    width: 60%
    height: 100%

.headerLogo
    height: 36px

.searchbarCommonCont
    border: 1px solid $lightGrey1
    border-radius: 16px
    height: 34px
    font-size: 18px
    line-height: 37px
    text-align: center
    color: $lightGrey1
    myriadproRegIt()

#headerBtnCont
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    margin-left: 8px
    width: 170px

.btnFilled
    border-radius: 16px
    height: 30px
    font-size: 18px
    line-height: 30px
    text-align: center
    color: #ffffff
    background-color: hsl(216 52% 59%)
    myriadproLight()
    transSmooth1(background-color, 0.5s)

.btnFilled:hover
    transSmooth1(background-color, 0.5s)
    background-color: hsl(216 39% 51%)

.btnUnfilled
    border: 1px solid $lightGrey1
    border-radius: 16px
    height: 30px
    font-size: 18px
    line-height: 30px
    text-align: center
    myriadproLight()

// --below-- all styles for .ProductCardCont component 

.ProductCardCont 
    display: flex
    flex-direction: row
    align-items: top
    justify-content: flex-start
    margin-bottom: 26px
    border-radius: 40px
    width: 920px
    height: 290px
    background-color:  #fff
    interReg()

.ProductImgCont
    display: flex
    flex-direction: column
    align-items: center
    justify-content: flex-end
    margin-top: 28px
    margin-left: 26px
    width: 210px
    height: 250px

.ProductImg
    border-radius: 10px
    width: 210px

.ProductImgArrowsCont
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    margin-top: 6px

.ProductImgArrow
    height: 33px

.ProductInfoCont
    display: flex
    flex-direction: column
    align-items: left
    justify-content: flex-start
    margin-left: 32px
    padding-top: 26px
    width: 360px

.ProductInfoName
    interSemibold()
    padding-bottom: 2px
    font-size: 24px

.ProductInfoType
    interRegIt()
    font-size: 16px

.ProductInfoFeaturesCont
    display: flex
    flex-direction: row
    align-items: flex-start
    justify-content: space-between
    margin-top: 10px
    width: 100%
    line-height: 30px

.ProductFeaturesInfoCont
    text-align: right

.ProductPriceCont
    display: flex
    flex-direction: column
    align-items: flex-end
    justify-content: flex-start
    padding-top: 30px
    width: 260px

.ProductPriceIconsRow
    display: flex
    flex-direction: row
    align-items: center
    justify-content: flex-start
    margin-bottom: 20px
    width: 90%

.bonuspoints 
    interLightIt()
    margin-bottom: 4px
    font-size: 16px

.ProductPriceBonuses
    interSemiboldIt()
    margin-bottom: 10px
    font-size: 20px

.yourprice 
    interLightIt()
    margin-bottom: 4px
    font-size: 16px

.ProductPrice
    interSemiboldIt()
    margin-bottom: 24px
    font-size: 32px
    color: hsl(147 50% 42%)

.ProductPriceIcon 
    margin-right: 16px
    height: 20px

.AddtocartBtn
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    border-radius: 20px
    width: 160px
    height: 50px
    font-size: 22px
    text-align: center
    color: #fff
    background-color: hsl(216 52% 59%)
    interLight()
    transSmooth1(background-color, 0.5s)

.AddtocartBtn:hover
    transSmooth1(background-color, 0.5s)
    background-color: hsl(216 39% 51%)

